<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip Calculator"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1F1F1F"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/totalInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:hint="Bill Amount (R)"
        app:startIconDrawable="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toBottomOf="@id/appTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/totalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/labelTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Percentage: 15%"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#49454F"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/totalInputLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/tipSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:valueFrom="0.0"
        android:valueTo="30.0"
        android:value="15.0"
        android:stepSize="1.0"
        app:layout_constraintTop_toBottomOf="@id/labelTipPercent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/peopleInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:hint="Number of People"
        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
        app:layout_constraintTop_toBottomOf="@id/tipSlider">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/peopleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:text="Calculate Split"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/peopleInputLayout" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/resultsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E0E0E0"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/resultsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter bill details to see your split."
                android:textSize="18sp"
                android:textColor="#1F1F1F"
                android:textStyle="bold"
                android:lineSpacingExtra="10dp"
                android:gravity="center" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>